<%- include('../admin/layouts/adminsidebars') %> <%-
include('../admin/layouts/adminnavebar') %> >

<div class="main-panel">
  <div class="content-wrapper">
    <div class="col-lg-12 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">USERS</h4>

          <p class="card-description"><code>user detels</code></p>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>User</th>
                  <th>name</th>
                  <th>number</th>
                  <th>status</th>
                  <th>block</th>
                </tr>
              </thead>
              <% if (users.length > 0) { %> <% for (let i = 0; i < users.length;
              i++) { %>
              <tbody>
                <tr>
                  <td class="py-1">
                    <img
                      src="/admin/assets/images/faces-clipart/pic-1.png"
                      alt="image"
                    />
                  </td>
                  <td><%= users[i].name %></td>
                  <td><%= users[i].mobile %></td>

                  <td>
                    <% if (users[i].is_verified === 0) { %>
                    <button style="background-color: green; color: white">
                      verified
                    </button>
                    <% } else if (users[i].is_verified === 1) { %>
                    <button style="background-color: red; color: white">
                      Not verified
                    </button>
                    <% } %>
                  </td>

                  <td>
                    <% if (users[i].is_verified === 0) { %>
                    <a href="/admin/block?id=<%=users[i]._id%>">
                      <button>Block</button></a
                    >
                    <% } else { %>
                    <a href="/admin/block?id=<%=users[i].id%>"
                      ><button>Unblock</button></a
                    >
                    <% } %>
                  </td>
                </tr>
                <% } %> <% } else { %>
                <tr>
                  <td colspan="4">User not found</td>
                  <td colspan="4">add user</td>
                </tr>
              </tbody>
              <% } %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- content-wrapper ends -->
  <!-- partial:../../partials/_footer.html -->
  <%- include('../admin/layouts/adminfootbar') %>
</div>
