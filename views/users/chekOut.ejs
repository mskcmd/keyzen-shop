      cancelButtonText: "Cancel",
    }).then((result) => {
      if (result.isConfirmed) {
        $.ajax({
          url: "/removeAddress",
          data: {
            id: id,
          },
          method: "POST", // Changed method to "POST"
          success: (response) => {
            if (response.remove === true) { // Fixed the condition
              location.reload();
            }
          },
        });
      }
    });
  }
</script>
