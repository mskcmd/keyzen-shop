                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header text-center">
                          <h4 class="modal-title w-100 font-weight-bold">
                            Edit Profile
                          </h4>
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <div class="modal-body mx-3">
                          <div class="md-form mb-3">
                            <label data-error="wrong" data-success="right" for="orangeForm-name">
                              Name</label>
                            <input type="text" name="name" id="name" value="<%=user.name%>" class="form-control validate" />
                            <div id="nameError" style="display: none; color: red"></div>
                          </div>
                          <div class="md-form mb-3">
                            <label data-error="wrong" data-success="right" for="orangeForm-email">
                              email</label>

                            <input type="email" name="email" id="email" value="<%=user.email%>" class="form-control validate" />
                            <div id="emailError" style="display: none; color: red"></div>
                          </div>

                          <div class="md-form mb-3">
                            <label data-error="Enter a valid mobile number" data-success="right" for="orangeForm-mobile">Mobile Number</label>
                            <input type="tel" name="mobile" id="phoneNumber" value="<%=user.mobile%>" class="form-control validate" pattern="[0-9]{10}" />
