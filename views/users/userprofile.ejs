                          </div>
                          <div id="profileSuccess" style="display: none; color: green"></div>
                        </div>
                        <div class="modal-footer d-flex justify-content-center">
                          <button id="editProfile" type="submit" class="btn btn-outline-primary-2">
                            <span>save </span>
                            <i class="icon-long-arrow-right"></i>
                          </button>
                        </div>
                      </div>
                    </div>
                  </div>
                </form>
              </div>
              <!-- .End .tab-pane -->

              <div class="tab-pane fade" id="tab-orders" role="tabpanel" aria-labelledby="tab-orders-link">
                <table class="table table-cart table-mobile">
                  <thead>
                    <tr>
                      <th>No.</th>
                      <th>Date</th>
                      <th>Amount</th>
                      <th>Payment</th>
                      <th>count</th>
                      <th>Status</th>
                      <th>Details</th>


                    </tr>
                  </thead>

                  <tbody>
                    <% if(oderData.length > 0 ){ %>
                    <% for(let i=0;i<oderData.length;i++){ %>
                    <tr>
                      <td><%= i+1 %></td>
                      <td><%= oderData[i].date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: '2-digit' }).replace(/\//g, '-') %></td>
                      <td>₹ <%= oderData[i].totalAmount %></td>
                      <td><%= oderData[i].paymentMethod %> </td>
                      <td><%= oderData[i].products.length %></td>
                      <td><%= oderData[i].status %></td>
                      <td>
                        <a href="/viewOrderDetails?id=<%=oderData[i]._id%>" class=" btn-outline-dark btn-round">View Details</a>
                      </td>
                      </td>



                    </tr>

                    <% } %>
                    <% } else{ %>

                    <div class="error-content text-center">
                      <p>No order has been made yet.</p>
                      <a href="/product" class="btn btn-outline-primary-2"><span>GO SHOP</span><i class="icon-long-arrow-right"></i></a>
                    </div><!-- .End .tab-pane -->

                    <% } %>
                  </tbody>
                </table><!-- End .table table-wishlist -->


              </div>
              <!-- .End .tab-pane -->


              <div class="tab-pane fade" id="tab-downloads" role="tabpanel" aria-labelledby="tab-downloads-link">
